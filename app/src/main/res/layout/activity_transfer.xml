<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".view.TransferActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/txt_detail_header"
        android:gravity="center_vertical"
        android:text="@string/transfer"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/sp_transfer_to"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical"
        android:text="14-07-24"
        android:id="@+id/txt_current_date"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:hint="remarks"
        android:id="@+id/edt_remarks"/>

    <Button
        android:text="Scan RFID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/btn_scan_rfid"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_transfer_product"/>


</LinearLayout>